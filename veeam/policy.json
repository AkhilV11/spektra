{
	 "if": {
	    "anyOf": [
		 {
			"not": {
			  "anyOf": [
                    {
				    "field": "type",
				    "like": "Microsoft.Compute/snapshots/*"
				    },
                    {
				    "field": "type",
				    "like": "Microsoft.Compute/virtualMachines/*"
				    },
                    {
				    "field": "type",
				    "like": "Microsoft.Compute/virtualMachines/extensions/*"
				    },
                    {
				    "field": "type",
				    "like": "Microsoft.Network/networkInterfaces/*"
				    },
                    {
				    "field": "type",
				    "like": "Microsoft.Network/networkSecurityGroups/*"
				    },
                    {
				    "field": "type",
				    "like": "Microsoft.Network/publicIPAddresses/*"
				    },
                    {
				    "field": "type",
				    "like": "Microsoft.Network/virtualNetworks/*"
				    },
                    {
				    "field": "type",
				    "like": "Microsoft.ServiceBus/namespaces/*"
				    },
                    {
				    "field": "type",
				    "like": "Microsoft.Sql/servers/*"
				    },
                    {
				    "field": "type",
				    "like": "Microsoft.Storage/storageAccounts/*"
				    },
				  {  
                                     "field":"type",
                                     "like":"Microsoft.Compute/disks/*"
                                     },
                    {
				    "field": "type",
				    "in": ["Microsoft.Compute/disks","Microsoft.Compute/snapshots", "Microsoft.Compute/virtualMachines", "Microsoft.Compute/virtualMachines/extensions", "Microsoft.Network/networkInterfaces", "Microsoft.Network/networkSecurityGroups", "Microsoft.Network/publicIPAddresses", "Microsoft.Network/virtualNetworks", "Microsoft.ServiceBus/namespaces", "Microsoft.Sql/servers", "Microsoft.Storage/storageAccounts"]
				    }
                ]
			}
		 },
          {
		  "allOf": [
			{
			  "field": "type",
			  "equals": "Microsoft.Compute/virtualMachines"
			},
			{
			  "not": {
				"allOf": [
				  {
                    "field": "Microsoft.Compute/virtualMachines/imageOffer",
					"in": ["", "0001-com-ubuntu-server-focal", "azure_backup_free", "UbuntuServer"]
				  },
				  {
					"field": "Microsoft.Compute/virtualMachines/imagePublisher",
					"in": ["", "canonical", "Canonical", "veeam"]
				  },
				  {
					"field": "Microsoft.Compute/virtualMachines/imageSku",
					 "in": ["", "16.04-LTS", "20_04-lts", "veeambackupazure_free_v4"]
				  },
				  {
					"field": "Microsoft.Compute/virtualMachines/sku.name",
					"in": ["Standard_DS1_v2", "Standard_F2s_v2"]
				  }
				]
			  }
			}
		   ]
		},
         {
		  "allof":[
			{
			  "field": "type",
			  "equals": "Microsoft.SQL/servers/databases"
			},
			{
			  "not":{
					"field": "Microsoft.Sql/servers/databases/requestedServiceObjectiveName",
					"in": ["S0", "System0"]
			  }
			}
		  ]
		},
            {
			"allOf": [
			  {
				"source": "action",
				"equals": "Microsoft.Storage/storageAccounts/write"
			  },
			  {
				"field": "type",
				"equals": "Microsoft.Storage/storageAccounts"
			  },
			  {
				"not": 
				  {
					"field": "Microsoft.Storage/storageAccounts/sku.name",
					"in": ["StandardGRS", "StandardLRS"]
				  }
			   }
			]
		  },

	  ]
	},
	"then": {
	  "effect": "deny"
	}
}
